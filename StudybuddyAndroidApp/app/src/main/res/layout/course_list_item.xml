<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="@dimen/row_padding_vertical">

    <ImageView
        android:id="@+id/cimageView"
        android:layout_width="@dimen/thumbnail"
        android:layout_height="@dimen/thumbnail"
        android:padding="5dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/course_TitleTxtview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cimageView"
        android:inputType="textMultiLine"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:textColor="@color/item_name"
        android:textSize="17dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/course_description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoTitleTxtview"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/cimageView"
        android:textColor="@color/blue_black_light"
        android:textSize="12dp" />

</RelativeLayout>
